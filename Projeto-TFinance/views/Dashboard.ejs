<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Dashboard - <%= user.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>Bem-vindo, <%= user.name %>!</h2>
  <p>Saldo atual: <strong>R$ <%= saldo.toFixed(2) %></strong></p>

  <h4>Nova Transação</h4>
  <form method="POST" action="/add">
    <div class="mb-3">
      <label>Tipo:</label>
      <select class="form-control" name="type" required>
        <option value="receita">Receita</option>
        <option value="despesa">Despesa</option>
      </select>
    </div>
    <div class="mb-3">
      <label>Valor:</label>
      <input type="number" step="0.01" name="value" class="form-control" required>
    </div>
    <div class="mb-3">
      <label>Categoria:</label>
      <select class="form-control" name="category" required>
        <option>Alimentação</option>
        <option>Despesas Pessoais</option>
        <option>Fatura</option>
        <option>Investimentos</option>
        <option>Outros</option>
      </select>
    </div>
    <div class="mb-3">
      <label>Data:</label>
      <input type="date" name="date" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
  </form>

  <h4 class="mt-5">Suas Transações</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Tipo</th><th>Valor</th><th>Categoria</th><th>Data</th>
      </tr>
    </thead>
    <tbody>
      <% transacoes.forEach(t => { %>
        <tr>
          <td><%= t.type %></td>
          <td>R$ <%= t.value.toFixed(2) %></td>
          <td><%= t.category %></td>
          <td><%= t.date %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
